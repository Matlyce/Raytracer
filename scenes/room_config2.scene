# Configuration of the camera
camera:
{
    resolution:
    {
        width = 400;
        height = 400;
    }
    position:
    {
        x = 0.0;
        y = 6.0;
        z = -30.0;
    }
    fieldOfView = 90.0; # In degree
    maxDepth = 10;
    samples = 200;
    focusPoint:
    {
        x = 0.0;
        y = 2.0;
        z = 0.0;
    }
    sceneBackground:
    {
        r = 0.0;
        g = 0.0;
        b = 0.0;
    }
}

materials:
{
    material_ground:
    {
        type = "lambertian";
        color = { r = 255.0; g = 255.0; b = 0.0; }
    }
    material_center:
    {
        type = "lambertian";
        color = { r = 0.0; g = 255.0; b = 255.0; }
    }
    material_left:
    {
        type = "metal";
        fuzziness = 0.0;
        color = { r = 255.0; g = 0.0; b = 0.0; }
    }
    material_right:
    {
        type = "lightDiffuse";
        color = { r = 255.0; g = 255.0; b = 255.0; }
    }
    material_cube:
    {
        type = "lambertian";
        color = { r = 255.0; g = 0.0; b = 0.0; }
    }
    chess_board:
    {
        type = "chessBoard";
        color1 = { r = 255.0; g = 255.0; b = 255.0; }
        color2 = { r = 0.0; g = 0.0; b = 0.0; }
    }
}

